{
    "compilerOptions": {
      "target": "ES6",                          // 编译目标版本
      "module": "CommonJS",                    // 模块系统 (Node.js 默认使用 CommonJS)
      "outDir": "./dist",                      // 输出目录
      "rootDir": "./src",                      // 源代码目录
      "strict": true,                         // 启用严格类型检查
      "esModuleInterop": true,                // 允许与 ES Module 兼容
      "skipLibCheck": true                    // 跳过库文件检查以加快编译速度
    },
    "include": ["src/**/*"],                  // 包含的文件
    "exclude": ["node_modules", "**/__tests__/*"] // 排除的文件
  }